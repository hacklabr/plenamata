{
    "name": "plenamata-plugin",
    "version": "0.1.0",
    "repository": "hacklab.com.br",
    "author": "hacklab/ <hacklab.com.br>",
    "license": "MIT",
    "scripts": {
        "dev": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "start": "npm run dev -- --watch",
        "build": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js"
    },
    "keywords": [],
    "dependencies": {
        "@popperjs/core": "^2.10.2",
        "@vue/composition-api": "^1.1.3",
        "@wordpress/block-editor": "^4.2.0",
        "@wordpress/blocks": "^6.19.0",
        "@wordpress/components": "^9.9.0",
        "@wordpress/i18n": "^4.2.1",
        "@wordpress/icons": "^5.0.0",
        "@wordpress/rich-text": "^5.0.6",
        "capitalize-pt-br": "^0.6.0",
        "chart.js": "^3.5.1",
        "chartjs-plugin-zoom": "^1.1.1",
        "click-outside": "^2.0.2",
        "color": "^3.2.1",
        "luxon": "^2.0.2",
        "vue": "^2.6.11",
        "vue-chart-3": "^0.5.7"
    },
    "devDependencies": {
        "@wordpress/scripts": "^12.0.0",
        "cross-env": "^5.2.1",
        "laravel-mix": "^4.1.4",
        "laravel-mix-copy-watched": "^2.3.1",
        "resolve-url-loader": "^2.3.1",
        "sass": "^1.23.7",
        "sass-loader": "^7.3.1",
        "scroll-into-view": "^1.16.0",
        "vue-template-compiler": "^2.6.11"
    },
    "browserslist": [
        "extends @wordpress/browserslist-config"
    ],
    "jest": {
        "automock": false,
        "verbose": true,
        "testURL": "http://domain.tld/",
        "setupFiles": [
            "<rootDir>/.tests/js/setupTests.js"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/"
        ],
        "transform": {
            "\\.[tj]sx?$": [
                "babel-jest",
                {
                    "presets": [
                        [
                            "babel-preset-env",
                            {
                                "targets": {
                                    "node": 10
                                }
                            }
                        ]
                    ]
                }
            ]
        }
    },
    "husky": {
        "hooks": {
            "pre-push": "npm run cs -- --silent --continue-on-error"
        }
    }
}
